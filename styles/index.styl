@import url(https://fonts.googleapis.com/css?family=Roboto:400,300,300italic,400italic,700,700italic);
$borderColor= #cccccc;
$blueColor= #00bcd4;
$textColor=#333333;
*{
	font-family: 'Roboto', sans-serif;
}
.form
	max-width: 500px;
	padding: 30px;
	&, &-sidebar
		text-align: left;
		display inline-block;
		vertical-align top;
		border: 2px solid $borderColor;
	&-wrap
		text-align: center;
		padding: 30px 0;
	&__title {
		color: $textColor;
		text-align: center;
		font-size: 25px;
	}
	& > div
		padding: 7px
	&__comments
		transition: all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
		border:1px solid $borderColor
		outline:none
		&:focus
			border-color: $blueColor
			box-shadow 0 0 2px $blueColor
	&__submit
		text-align: center;
		& button span{
			font-size: 16px !important;
		}
	&-sidebar
		width: 200px;
		margin-left: 20px;
		padding: 30px;
